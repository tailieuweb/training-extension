{
    "manifest_version": 2,
    "name": "Check Auto",
    "description": "Công cụ điểm danh tự động UserLogin trên trình duyệt Chrome & Cờ rôm+",
    "version": "1.0.0",
    "permissions": ["tabs", "*://*/*", "storage"],
    "icons": { 
        "16": "public/image/icon.png",
        "48": "public/image/icon.png",
       "128": "public/image/icon.png" 
    },
    "author": "Nhóm M",
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["public/js/jquery.js"]
    }],
    "browser_action": {
        "default_title": "Check Auto (Sinh Viên)",
        "default_popup": "popup.html",
        "default_icon": "public/image/icon.png"
    }
}